<body class="d-flex justify-content-center align-items-center vh-100">
  <div class="glass container">
    <div class="row">
      <div class="col">
        <h1 class="text-center text">Anime Wisdom</h1>
        <p class="text-center fs-5 fst-italic" style="color: #333">
          Discover inspiring quotes and timeless lessons from your favorite
          anime.
        </p>
        <form action="/submit" method="POST" class="w-100 d-flex">
          <input type="text" name="anime" class="form-control" placeholder="Enter anime name" aria-label="Anime"
            required />
          <button type="submit" class="btn btn-primary ms-2">Submit</button>
        </form>
      </div>

      <!-- <div class="col">
          
        </div> -->
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
    crossorigin="anonymous"></script>
</body>

</html>